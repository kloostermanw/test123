[DEFAULT]
verbose = false
# Command that runs after the release is created
# command = none | vendor/bin/readmegen
cmd1 = none
# arguments belong by command
# arguments = none | --from {current_release} --to {new_release} --release {new_release}
cmd1_arguments = --from {current_release} --to {new_release} --release {new_release}
# Specify the editor of choice, this will open the editor after the release is created and the cmd1 has run
# editor vim | nano | none
editor = none
# The edit will load the following file
# and this file will commited in the release branch
# filename = none | CHANGELOG.md
filename = none
# Command that runs after release is pushed to origin
cmd2 = none
cmd2_arguments = none